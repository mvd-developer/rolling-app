<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">


    <com.sdsmdg.harjot.crollerTest.Croller
        android:id="@+id/time_controller"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:back_circle_color="#EDEDED"
        app:indicator_color="@color/colorAccent"
        app:indicator_width="0.1"
        app:is_continuous="true"
        app:label=""
        app:layout_constraintBottom_toTopOf="@+id/bg_shape_rectangle"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:main_circle_color="#FFFFFF"
        app:max="1000"
        app:progress_primary_color="@color/colorAccent"
        app:progress_secondary_color="#EEEEEE"
        app:start_offset="45" />


    <View
        android:id="@+id/bg_shape_rectangle"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bd_rectangle_rounded_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <SeekBar
        android:id="@+id/pull_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:max="100"
        android:progress="5"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:progressDrawable="@drawable/seekbar_style"
        android:splitTrack="false"
        android:thumb="@drawable/custom_thumb"
        android:thumbOffset="16dp"
        app:layout_constraintEnd_toEndOf="@+id/bg_shape_rectangle"
        app:layout_constraintStart_toStartOf="@+id/bg_shape_rectangle"
        app:layout_constraintTop_toTopOf="@+id/bg_shape_rectangle" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btn_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/bg_shape_rectangle"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/bg_shape_rectangle"
        app:layout_constraintStart_toStartOf="@+id/bg_shape_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/pull_btn"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/press_button" />

    <TextView
        android:id="@+id/tv_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start"
        app:layout_constraintEnd_toEndOf="@+id/btn_start"
        app:layout_constraintStart_toStartOf="@+id/btn_start"
        app:layout_constraintTop_toTopOf="@+id/btn_start" />


</androidx.constraintlayout.widget.ConstraintLayout>